@model Clgproject.Models.Companydetail;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Inventory Management</title>

    <!-- Bootstrap -->
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/fontawesome/css/font-awesome.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">

    <div class="login_wrapper">
        <div class="form-group">
            <div class="animate form">
                <section class="login_content">
                    <form asp-action="Companydetails" asp-controller="ComapnyLogin" method="post">
                        <h1>Create Account</h1>
                        <input type="hidden" id="bank_id" name="bank_id" />
                        <div class="form-group">
                            <input asp-for="companyid" class="form-control" placeholder="Company Id" />
                            <span asp-validation-for="companyid" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="gstno" class="form-control" placeholder="GST number" />
                            <span asp-validation-for="gstno" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="panno" class="form-control" placeholder="PAN number" />
                            <span asp-validation-for="panno" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="faxno" class="form-control" placeholder="FAX number" />
                            <span asp-validation-for="faxno" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <input  asp-for="offwebsite" class="form-control" placeholder="Off Website" />
                            <span asp-validation-for="offwebsite" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="socialmedialink" class="form-control" placeholder="Social Media Link" />
                            <span asp-validation-for="socialmedialink" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <input asp-for="other" class="form-control" placeholder="Other" />
                            <span asp-validation-for="other" class="text-danger"></span>
                        </div>

                        <div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>

                       
                    </form>
                </section>
            </div>
        </div>
    </div>


</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

