@model Clgproject.Models.Bankdetail;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Inventory Management</title>

    <!-- Bootstrap -->
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/fontawesome/css/font-awesome.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">

    <div class="login_wrapper">
        <div class="form-group">
            <div class="animate form">
                <section class="login_content">
                    <form asp-action="BankEdit" asp-controller="ComapnyLogin" method="post">
                        <h1>Create Account</h1>
                        <div class="form-group">
                            <input asp-for="companyid" class="form-control" placeholder="Company Id" />
                            <span asp-validation-for="companyid" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="bankname" class="form-control" placeholder="Bank Name" />
                            <span asp-validation-for="bankname" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="customername" class="form-control" placeholder="Customer Name" />
                            <span asp-validation-for="customername" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <input asp-for="accountno" class="form-control" placeholder="Account Number" />
                            <span asp-validation-for="accountno" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ifsccode" class="form-control" placeholder="IFSC Code" />
                            <span asp-validation-for="ifsccode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="branchname" class="form-control" placeholder="Branch Number" />
                            <span asp-validation-for="branchname" class="text-danger"></span>
                        </div>



                      

                        <div>
                            <div class="form-group">
                                <input type="submit" asp-action="RegisterEdit" asp-controller="ComapnyLogin" value="View" class="btn btn-primary" />
                            </div>
                        </div>


                    </form>
                </section>
            </div>
        </div>
    </div>


</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
