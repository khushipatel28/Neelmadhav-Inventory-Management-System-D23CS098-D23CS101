@model Clgproject.Models.Registration;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Inventory Management</title>

    <!-- Bootstrap -->
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/fontawesome/css/font-awesome.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <h4>@ViewBag.errorMessage</h4>
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form asp-action="Login">
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" id="Companynamename" asp-for="company_name" class="form-control" placeholder="Company name" />
                            <span asp-validation-for="company_name" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="password" asp-for="pass_word" class="form-control" placeholder="Password" required="" />
                        </div>
                        <div>

                            <button type="submit" class="btn btn-default submit">
                                Login
                            </button>


                            <a class="reset_pass" asp-action="">Lost your password?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a asp-action="Register"
                                   class="to_register">Create Account</a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                           
                        </div>
                    </form>

                </section>
            </div>
        </div>
    </div>
</body>
</html>
