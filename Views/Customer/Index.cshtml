<div class="right_col" style="display: block;">
    <div class="col-lg-12 col-md-12 col-sm-6">
        
            <h1>Customer</h1>
            <table class="table">
                <thead>
                    <tr>

                        <th>Customer Id</th>
                        <th>Name</th>
                        <th>Customer Address</th>
                                <th>Account_no</th>
                        <th>Transaction id</th>
                                <th>Mode</th>
                                <th>Type</th>
                     <th>Status</th>
                        
                        <th></th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.customer_id</td>
                            <td>@customer.name</td>
                            <td>@customer.cust_address</td>
                                    <td>@customer.account_no</td>

                                    <td>@customer.Cust_Transaction_id</td>
                                    <td>@customer.cust_Transaction.mode</td>
                                    <td>@customer.cust_Transaction.t_type</td>
                                    <td>@customer.cust_Transaction.t_status</td>

                            <td>
                            <td><a href="/Customer/UpdateCustomer/?customer_id=@customer.customer_id">Edit</a></td>
                            <td><a href="/Customer/Delete/?customer_id=@customer.customer_id">Delete</a></td>
                            </td>
                        </tr>
                    }


                </tbody>

            </table>
